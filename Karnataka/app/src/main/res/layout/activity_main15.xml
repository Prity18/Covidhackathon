<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/h"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".Main15Activity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_gravity="center"
       android:gravity="center"> <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="You are in Doctor's corner"
       android:textSize="40dp"
       android:layout_gravity="center"
       android:gravity="center"
       android:textStyle="italic"
       android:textColor="@color/white"></TextView>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="30dp"
           android:textColor="@color/white"
           android:textStyle="italic"
           android:text=" General Doctor's"
           android:layout_gravity="center"
           android:gravity="center"></TextView>

       <Button
           style="@style/Widget.AppCompat.Button.Borderless"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Online Chat"
           android:textStyle="italic"
           android:textSize="30dp"/>

       <Button
           style="@style/Widget.AppCompat.Button.Borderless"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Online Appointment"
           android:textStyle="italic"
           android:textSize="30dp"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="30dp"
           android:textColor="@color/white"
           android:textStyle="italic"
           android:text="Consult Particular Doctor"
           android:layout_gravity="center"
           android:gravity="center"></TextView>

       <Button
           style="@style/Widget.AppCompat.Button.Borderless"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Types of Doctors"
           android:textSize="30dp"
           android:textStyle="italic"/>
   </LinearLayout>

</LinearLayout>