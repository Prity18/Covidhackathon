<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    tools:context=".Main2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Registration"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:textStyle="bold"></TextView>

    <Button
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CITIZEN"
        android:onClick="citizen"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:targetApi="lollipop" />

    <Button
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MUNICIPALITY"
        android:onClick="municipality"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:targetApi="lollipop" />

    <Button
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="POLICE"
        android:onClick="police"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:targetApi="lollipop" />

    <Button
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="LAB ASSISTANT"
        android:onClick="labassistant"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:targetApi="lollipop" />

    <Button
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="HOSPITAL"
        android:onClick="hospital"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:targetApi="lollipop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="If already registered please Log in ?"
        android:gravity="center"
        android:textColor="@android:color/white"
        >
    </TextView>

    <Button
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="LOG IN "
        android:onClick="login"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:targetApi="lollipop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="italic"
        android:text="EMERGENCY"
        android:gravity="center"
        android:textColor="@android:color/white">
    </TextView>

    <Button
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="100"
        android:onClick="hundred"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:targetApi="lollipop" />

    <Button
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="1075"
        android:onClick="onezerosevenfive"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorHint="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:targetApi="lollipop" />




</LinearLayout>